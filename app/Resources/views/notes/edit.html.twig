{% extends ':notes:form.html.twig' %}

{% block page_content %}
    <h1>Note edit</h1>

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.content) }}
    {{ form_row(form.createrAt) }}
    {{ form_row(form.updatedAt) }}
    {{ form_row(form.noteType) }}

    <button type="submit" class="btn btn-success" formnovalidate>Save</button>
    {{ form_end(form) }}


    <a href="{{ path('notes_index') }}" class="btn btn-primary">Back to the list</a>
    {{ form_start(delete_form) }}
    <input type="submit" class="btn btn-danger" value="Delete">
    {{ form_end(delete_form) }}
{% endblock %}
