{% extends ':app:base.html.twig' %}

{% block page_content %}
    <h1>Note</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ note.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ note.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ note.content }}</td>
            </tr>
            <tr>
                <th>Createrat</th>
                <td>{% if note.createrAt %}{{ note.createrAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if note.updatedAt %}{{ note.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ note.user.username }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('notes_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('notes_edit', { 'id': note.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
