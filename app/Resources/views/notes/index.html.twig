{% extends ':app:base.html.twig' %}

{% block page_content %}
    <h1>Notes list</h1>

    <table class="table table-striped jambo_table bulk_action">
        <thead>
            <tr>
                <th class="column-title">Id</th>
                <th class="column-title">Name</th>
                <th class="column-title">Content</th>
                <th class="column-title">Createrat</th>
                <th class="column-title">Updatedat</th>
                <th class="column-title">User</th>
                <th class="column-title">noteType</th>
                <th class="column-title">Actions</th>
            </tr>
        </thead>
        <tbody>
{{ dump(notes) }}
        {% for note in notes %}
            <tr class="even pointer">
                <td><a href="{{ path('notes_show', { 'id': note.id }) }}">{{ note.id }}</a></td>
                <td>{{ note.name }}</td>
                <td>{{ note.content }}</td>
                <td>{% if note.createrAt %}{{ note.createrAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if note.updatedAt %}{{ note.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ note.user.username }}</td>
                <td>{{ note.noteType.name}}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('notes_show', { 'id': note.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('notes_edit', { 'id': note.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('notes_new') }}">Create a new note</a>
        </li>
    </ul>
{% endblock %}
